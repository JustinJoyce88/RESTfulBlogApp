<% include ./partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit<%= blog.title %></div>
  <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="field">
      <label for="title">Title</label>
      <input type="text" name="blog[title]" value="<%= blog.title %>">
    </div>
    <div class="field">
      <label for="image">Image</label>
      <input type="text" name="blog[image]" value="<%= blog.image %>">
    </div>
    <div class="field">
      <label for="body">Content</label>
      <textarea name="blog[body]" id="" cols="20" rows="10"><%= blog.body %></textarea>
    </div>
    <button class="ui inverted green button big" type="submit">Submit</button>
  </form>
</div>

<% include ./partials/footer %>